# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/newsletter-manager

# Security
ENCRYPTION_KEY=your-secret-key-min-32-chars-long
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com
SESSION_SECRET=your-session-secret-key-min-32-chars
API_KEY_ROTATION_DAYS=90
MAX_FILE_SIZE=5242880 # 5MB in bytes
VIRUS_SCAN_API_KEY=your-virus-scan-api-key

# Request Limits
MAX_REQUEST_SIZE_KB=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# CDN Configuration (Cloudflare)
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_API_TOKEN=your_api_token
DOMAIN_NAME=your-domain.com

# Security Audit Configuration
SECURITY_AUDIT_INTERVAL=7 # Days between automated security audits
SECURITY_NOTIFICATION_EMAIL=security@your-domain.com

# File Upload Security
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DIR=./uploads
VIRUS_SCAN_ENABLED=true

# API Security
API_KEY_EXPIRY_DAYS=90
API_KEY_CLEANUP_INTERVAL=86400 # 24 hours in seconds
